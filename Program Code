<script>
async functiongetWeather() {
const city = document.getElementById("cityInput").value; if (!city) returnalert("Please enter a city name");
const apiKey = "your_api_key";
const res = await fetch(`https://api.openweathermap.org/data/2.5/ weather?q=${city}&appid=${apiKey}&units=metric`);
const data = await res.json();
if (data.cod === "404") { document.getElementById("weatherResult").innerText = "City not found!";
 
return;
}

document.getElementById("weatherResult").innerText =
`	${data.name}: ${data.main.temp}Â°C, ${data.weather[0].description}`;
}

</script>
